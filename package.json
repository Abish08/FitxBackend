{
  "name": "fitx-backend",
  "version": "1.0.0",
  "description": "FitX Fitness Backend",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage",
    "test:integration": "cross-env NODE_ENV=test jest --testPathPattern=integration",
    "test:unit": "cross-env NODE_ENV=test jest --testPathPattern=unit",
    "test:ci": "cross-env NODE_ENV=test jest --ci --coverage --watchAll=false"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.8.0",
    "sequelize": "^6.28.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "babel-jest": "^30.0.5",
    "cross-env": "^7.0.3",
    "jest": "^30.0.5",
    "nodemon": "^2.0.20",
    "sequelize-test-helpers": "^1.4.3",
    "sqlite3": "^5.1.6",
    "supertest": "^7.0.0"
  }
}
